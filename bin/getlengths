#!/usr/bin/env perl -w
use strict;

## Simple program to report length of sequences in a fasta file

my $id = undef;
my $len;

sub printlen
{
  return if !defined $id;
  print "$id\t$len\n";
}

while (<>)
{
  if (/^>/)
  {
    printlen();
    chomp;
    $id = substr($_,1);
    $len = 0;
  }
  else
  {
    chomp;
    $len += length($_);
  }
}

printlen();
